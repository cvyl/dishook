{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["ES6"],
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "strict": true,
  },
  "exclude": [
	"node_modules",
	".gitignore"
	],
  "include": ["src/**/*"]
}